from numpy import true_divide
import pygame

pygame.init()

display = pygame.display.set_mode((800, 400))
pygame.display.set_caption("마우스 입력")

fps = pygame.time.Clock()

y_pos = display.get_height() // 2
x_pos = display.get_width() // 2

play = True
mouse_toggle = False

while play:
    # deltatime = fps.tick(120)

    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            play = False

        if event.type == pygame.MOUSEMOTION: # 마우스 움직임
            if (mouse_toggle):
                x_pos, y_pos = pygame.mouse.get_pos()
                pygame.draw.circle(display, (0, 255, 0), (x_pos, y_pos), 10)

        if event.type == pygame.MOUSEBUTTONDOWN: # 마우스 버튼 누름
            if event.button == 1: # 왼쪽 클릭
                mouse_toggle = True
            elif event.button == 3: # 오른쪽 클릭
                display.fill((0,0,0)) # 배경을 덧칠함


        if event.type == pygame.MOUSEBUTTONUP: # 마우스 버튼 뗌
            mouse_toggle = False

    pygame.display.update()

pygame.quit()